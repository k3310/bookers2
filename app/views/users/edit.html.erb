<div class="container">
  <div class="row"> 
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <!-- ここにエラーメッセージ -->
        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
        </div>
        <div class="form-group">
          <%= f.label :image %><br />
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
        </div>
        <div class="form-group">
          <%= f.label :introduction %><br />
          <%= f.text_area :introduction, class: "form-control", autofocus: true %>
          <%= f.submit "Update User", class: "btn btn-secondary btn-md" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


