<div class="container">
  <div class="row"> 
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <div>
        <% if @user.errors.any? && @user.errors.count == 1 %>
          <h3>
            <%= @user.errors.count %>error prohibited this obj from being saved:
          </h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% elsif @user.errors.any? %>
          <h3>
            <%= @user.errors.count %>errors prohibited this obj from being saved:
          </h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
        </div>
        <div class="form-group">
          <%= f.label :image %><br />
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
        </div>
        <div class="form-group">
          <%= f.label :introduction %><br />
          <%= f.text_area :introduction, class: "form-control", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary btn-md" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



